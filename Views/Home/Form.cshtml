@model Form
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Enter Movies into the Collection</h1>
<form method="post">
    <label asp-for="MovieCategory">Category:</label>
    <input asp-for="MovieCategory" required />
    <br />

    <label asp-for="MovieTitle">Title:</label>
    <input asp-for="MovieTitle" required />
    <br />

    <label asp-for="MovieYear">Year:</label>
    <input asp-for="MovieYear" required />
    <br />

    <label asp-for="MovieDirector">Director:</label>
    <input asp-for="MovieDirector" required />
    <br />

    <label asp-for="MovieRating">Rating:</label>
    <select asp-for="MovieRating" required>
        <option value="">Select a rating</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br /><br />

    <!-- Edited field as yes/no dropdown, not required -->
    <label asp-for="MovieEdited">Edited?</label>
    <select asp-for="MovieEdited">
        <option value="">Select an option</option> <!-- Added option to allow empty selection -->
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />

    <!-- Lent To field, not required -->
    <label asp-for="MovieLent">Lent to:</label>
    <input asp-for="MovieLent" />
    <br />

    <!-- Notes field, not required and limited to 25 characters -->
    <label asp-for="MovieNotes">Notes:</label>
    <input asp-for="MovieNotes" maxlength="25" />
    <br />

    <button type="submit">Submit Movie</button>
</form>
